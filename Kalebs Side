#Black Jack


from random import randint
coins = 100
bet = 0
corNum = False
gameRun = True
while corNum == False:
    try:
        bet = int(input(f"How much would you like to bet? You have {coins} >> "))
        if bet > 5 and bet <= coins:
            corNum = True
        else:
            print("ERROR: INVALID NUMBER")
    except:
        print("ERROR: INVALID NUMBER")
while gameRun == True:
    while corNum == False:
        try:
            bet = int(input(f"Would you like to hit or stand >> "))
            if bet > 5 and bet <= coins:
                corNum = True
            else:
                print("ERROR: INVALID NUMBER")
        except:
            print("ERROR: INVALID NUMBER")
    print(f"You Bet {bet}")
